/* Update grid layout to prevent squeezing */
.dashboard-grid-2x2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 350px 300px; /* Explicit row heights: Top taller, Bottom shorter */
    gap: 32px; /* Increased gap */
    width: 100%;
    margin-bottom: 56px !important;
    height: auto;
    min-height: 0;
}

/* Ensure cards inside grid fill their cells */
.dashboard-grid-2x2 > .dashboard-card {
    height: 100%;
    min-height: 0;
}
